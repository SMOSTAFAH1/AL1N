<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Icono de la crypto -->
    <ImageView
        android:id="@+id/ivCryptoIconSearch"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_crypto_placeholder"
        android:contentDescription="Crypto icon" />

    <!-- Información de la crypto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Símbolo y nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCryptoSymbolSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvCryptoNameSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bitcoin"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:ellipsize="end"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>

    <!-- Precio -->
    <TextView
        android:id="@+id/tvCryptoPriceSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$43,210.50"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

</LinearLayout>
